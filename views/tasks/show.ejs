<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= task.title%></h5>
                <p class="card-text"><%= task.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= task.deadline%></li>
                <li class="list-group-item text-muted"><%= task.sprint%></li>
                <li class="list-group-item text-muted"><%= task.performer%></li>
                <li class="list-group-item">Submitted by <%= task.author.username%></li>
            </ul>
            <%  if( currentUser && task.author.equals(currentUser._id))  {%>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/projects/<%=project._id%>/tasks/<%=task._id%>/edit">Edit</a>
                <form class="d-inline" action="/projects/<%=project._id%>/tasks/<%=task._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete Task</button>
                </form>
            </div>
            <% } %>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>

    </div>
</div>