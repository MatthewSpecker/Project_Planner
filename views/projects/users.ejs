<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">Change Users and Admin Rights</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/projects/<%=project._id%>?_method=PUT" method="POST" novalidate class="validated-form"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title"></label>
                <input class="form-control" type="text" id="title" name="project[title]"
                    value="<%=project.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <input class="form-control" type="text" id="description" name="project[description]"
                    value="<%=project.description %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <button class="btn btn-info">Update Project</button>
            </div>
        </form>
        <a href="/projects/<%= project._id%>">Back To Project</a>
    </div>
</div>