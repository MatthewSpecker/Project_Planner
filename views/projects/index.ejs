<% layout('layouts/boilerplate')%>

<div class="container">
    <h1>All Projects</h1>

    <% for (let project of projects){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-12">
                <div class="card-body">
                    <h4 class="card-title"><%= project.title %> </h4>
                    <p class="card-text"><%= project.description %></p>

                    <a class="btn btn-primary" href="/projects/<%= project._id %>">View <%= project.title %></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>